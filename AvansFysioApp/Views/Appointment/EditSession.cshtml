@model AvansFysioAppDomain.Domain.Session

<h2>Add session</h2>


<form asp-controller="Appointment" asp-action="EditSession" method="post" class="m-2">

    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label asp-for="AppointmentBegin">Time of appointment:</label>
        <input class="form-control" asp-for="AppointmentBegin" asp-format="{0:yyyy-MM-ddTHH:mm}" />
    </div>

    <button type="submit" class="btn btn-primary">Edit appointment</button>
    <a asp-controller="Patient" asp-action="PatientList" class="btn btn-secondary">Cancel</a>
</form>