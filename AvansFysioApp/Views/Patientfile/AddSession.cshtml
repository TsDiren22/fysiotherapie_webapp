@model AvansFysioAppDomain.Domain.Session

    <h2>Add session</h2>


    <form asp-controller="Patientfile" asp-action="AddSession" method="post" class="m-2">

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="PatientId">Patient:</label>
            <select class="form-control" asp-for="PatientId" asp-items="@ViewBag.Patients"></select>
        </div>
        <div class="form-group">
            <label asp-for="Name">Title session:</label>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Duration">Duration in minutes:</label>
            <input asp-for="Duration" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Add session</button>
        <a asp-controller="Patient" asp-action="PatientList" class="btn btn-secondary">Cancel</a>
    </form>
