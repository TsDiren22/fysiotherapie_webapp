@model AvansFysioAppDomain.Domain.Treatment

<h2>Edit treatment</h2>

<form asp-controller="Patientfile" asp-action="EditTreatment" method="post" class="m-2">

    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="PatientFileId"/>
    <input type="hidden" asp-for="DateCreated"/>
    <input type="hidden" asp-for="TypeId"/>
    <input type="hidden" asp-for="Description"/>
        
    <div class="form-group">
        <label asp-for="Room">Room:</label>
        <select asp-for="Room" class="form-control">
            <option value="">Select an occupation</option>
            <option value="Practice room">Practice room</option>
            <option value="Treatment room">Treatment room</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="DateOfTreatment">Date of treatment:</label>
        <input asp-for="DateOfTreatment" class="form-control" type="Date" />
    </div>

    <div class="form-group">
        <label asp-for="Particularities">Particularities:</label>
        <input asp-for="Particularities" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhysiotherapistId">Physiotherapist:</label>
        <select class="form-control" asp-for="PhysiotherapistId" asp-items="@ViewBag.Physiotherapists"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Patientfile" asp-action="TreatmentView" asp-route-id="@Model.PatientFileId" class="btn btn-secondary">Cancel</a>
</form>